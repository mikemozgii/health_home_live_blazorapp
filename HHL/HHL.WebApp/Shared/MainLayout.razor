@functions {

    public string CurrentUrl;
    public string acc_menu_class = "display_none";
    public string acc_menu_left_class = "display_none";

    protected override async Task OnInitializedAsync()
    {
        CurrentUrl = UriHelper.GetAbsoluteUri();
    }

    protected override async Task OnParametersSetAsync()
    {
        OnUrlHasChange();
    }


    protected override async Task OnAfterRenderAsync()
    {
        //  CurrentUrl = UriHelper.GetAbsoluteUri();
    }


    public AppSettings AppSettings = new AppSettings()
    {
        Mode = "debug"
    };




    public void OnUrlHasChange()
    {
        var tCurrentUrl = UriHelper.GetAbsoluteUri();
        if (CurrentUrl != null && !String.Equals(CurrentUrl, tCurrentUrl, StringComparison.OrdinalIgnoreCase))
        {
            if (acc_menu_class != "display_none")
            {
                 acc_menu_class = "animated slideOutRight faster";
            }
           
            if (acc_menu_left_class != "display_none")
            {
                  acc_menu_left_class = "animated slideOutLeft faster";
            }
           
            CurrentUrl = tCurrentUrl;
            //StateHasChanged();
        }


    }
};







