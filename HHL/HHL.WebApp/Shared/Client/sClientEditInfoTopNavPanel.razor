@inject Microsoft.AspNetCore.Components.IUriHelper UriHelper

<uContainer>
    <uCol>
        @foreach (var navItem in NavPanelItems)
        {
            if (navItem.IsActive)
            {
                <uButton Type="NavButton" Href="@navItem.Href" Title="@navItem.Name" isSoft="true" IsTransition="false" Color="green" CustomClass="mx-15" />
            }
            else
            {
                <uButton Type="NavButton" Href="@navItem.Href" Title="@navItem.Name" isSoft="true" IsTransition="false" CustomClass="mx-15" />
            }
        }

    </uCol>

</uContainer>





@functions {

    List<NavPanelItem> NavPanelItems { get; set; }

    protected override async Task OnInitializedAsync()
    {

        NavPanelItems = new List<NavPanelItem>()
{

        new NavPanelItem(UriHelper, "Personal", UrlNameHdr.ClientEditPersonalInfo ),
        new NavPanelItem(UriHelper, "Settings", UrlNameHdr.ClientEditSettings ),
        new NavPanelItem(UriHelper, "Contact Info", UrlNameHdr.ClientEditContactInfo),
        new NavPanelItem(UriHelper, "Address", UrlNameHdr.ClientEditAddresses),
        new NavPanelItem(UriHelper, "Plan", UrlNameHdr.ClientEditPlans),
        new NavPanelItem(UriHelper, "Payment Methods", UrlNameHdr.ClientEditPaymentMethods),
        //new NavPanelItem() { Name = "Payment Methods" },
        //new NavPanelItem() { Name = "Plans" }
        };
    }


}
